<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available devices"
            android:textColor="@color/textColorDark"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:id="@+id/availableDevicesText"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press SCAN button"
            android:layout_marginTop="10dp"
            android:id="@+id/pressScanButtonTextView"
            android:layout_below="@id/availableDevicesListView"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/availableDevicesText"
            android:id="@+id/availableDevicesListView"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Scan"
            android:textColor="#FFF"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:id="@+id/scanButton"
            />
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/availableDevicesListView"
            android:layout_centerHorizontal="true"
            android:id="@+id/progressCircle"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Getting near by devices..."
            android:layout_below="@+id/progressCircle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/gettingNearByDevicesText"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/textColorDark"
            android:text="Paired devices"
            android:id="@+id/pairedDevicesText"
            android:padding="10dp"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pairedDevicesListView"
            android:layout_below="@id/pairedDevicesText"
            />
    </RelativeLayout>

</LinearLayout>